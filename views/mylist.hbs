{{#if user}}
<div id="myListSave">
  <div class="alert alert-danger">
    <strong>Hmmm!</strong> That URL doesn't look right. Try again.
  </div>
  <form id="mylist-submit" action="/save" method="POST">
    <input type="name" name="url" class="form-control" id="exampleInputURL" aria-describedby="nameHelp" placeholder="http://...">
    <button type="submit" id="btn-mylist" class="btn btn-primary">Save Url</button>
  </form>
</div>


<div class="container">
  <div class="row">
    {{#each articles}}
    <div class="col-lg-7">
      <div class="card my-3">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-3">
              <a href="{{this.url}}"><img class="img-fluid" src="{{this.image}}"></a>
            </div>
            <div class="col-9 text-center">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.description}}</p>
              <form action="/mylist/{{this.id}}/delete" method="POST">
                <button class="btn btn-primary">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div id="google_translate_element"></div>
{{/if}}
<script type="text/javascript">
  function googleTranslateElementInit() {
    new google.translate.TranslateElement({ pageLanguage: 'en' }, 'google_translate_element');
  }
</script>
<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>